<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filetransmission.view.MainController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="391.0" style="-fx-font-family: ubuntu mono; -fx-font-size: 30;" text="Файл Дамжуулагч" />
            <HBox prefHeight="72.0" prefWidth="380.0" spacing="20.0" style="-fx-border-color: #999999; -fx-border-radius: 10 10 10 10;">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <TextField fx:id="pathField" promptText="Файлын зам..." />
                  <Button fx:id="fileSelectBtn" mnemonicParsing="false" text="Файл сонгох..." />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="49.0" prefWidth="380.0">
               <children>
                  <Label fx:id="stateLabel" text="Дамжуулах: " />
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="sendBtn" mnemonicParsing="false" text="Илгээх" />
                  <Button fx:id="cancelBtn" mnemonicParsing="false" text="Гарах" />
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
